<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UpdateUser</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="update-user-container">
    <form action="/update-user" method ="POST">
        <div><b> Update a new user:</b></div>
            <div>
              <label>FirsName:</label>
              <input type="text" name="firstName" value="<%= dataUser.firstName %>"/>
            </div>
            <div>
              <label>lastName:</label>
              <input type="text" name="lastName" value="<%= dataUser.lastName %>"/>
            </div>
            <div>
              <label>mail:</label>
              <input type="mail" name="mail" value="<%= dataUser.mail %>"/>
            </div>
            <div>
              <label>address:</label>
              <input type="text" name="address" value="<%= dataUser.address %>"/>
            </div>
              <input type="text" hidden value="<%= dataUser.id %>" name = "id"/>
            <div>
              <button type="submit" class="btn-save">Save</button>
            </div>
            
    </form>
  </div>
</body>
</html>